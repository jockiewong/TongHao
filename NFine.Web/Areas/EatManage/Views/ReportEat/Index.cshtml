<script type="text/javascript">
    $(function () {
        var date = new Date();
        if (date.getHours() >= 10) {
            $("#F_TodayTrue").attr("disabled", "disabled");
            $("#F_TodayFalse").attr("disabled", "disabled");
        }
        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,agendaWeek,agendaDay'
            },
            events: '/EatManage/ReportEat/GetGridJson'
        });
        $("input[type=checkbox]").each(function () {
            var name = $(this).attr("name");
            $.ajax({
                url: "/EatManage/ReportEat/GetFormJson?week=" + name,
                dataType: "json",
                success: function (data) {
                    if (data.ck == true) {
                        $("#" + name).attr("checked", "checked")
                    } else {
                        $("#" + name).removeAttr("checked")
                    }
                   
                }
            });
        });
       
        $("input[type=checkbox]").click(function () {
            $.submitForm({
                url: "/EatManage/ReportEat/SubmitForm",
                param: {week:$(this).attr("name"),ck:$(this).is(':checked')},
                success: function () {
                    $('#calendar').fullCalendar('refetchEvents');
                }
            })

        })
    });
   

</script>
